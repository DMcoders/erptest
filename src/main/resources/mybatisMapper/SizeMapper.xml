<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.erp01.mapper.SizeMapper">

    <insert id="addSize">
        INSERT INTO size(sizeName) VALUES (#{sizeName})
    </insert>

    <delete id="deleteSize">
        DELETE FROM size WHERE sizeID = #{sizeID}
    </delete>

    <select id="getAllSize" resultType="map">
        SELECT * FROM size
    </select>

</mapper>